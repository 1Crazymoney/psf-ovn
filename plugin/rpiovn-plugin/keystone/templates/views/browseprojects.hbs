<section>
  <div class="container">
    <div class="row" style="border: 1px solid;">
      <div class="col-xs-4" style="border: 1px solid;">
        <img src="http://rpiovn.org/images/rpi-tracker.jpg" class="img-responsive center-block projImg" />
      </div>
      <div class="col-xs-8 projSummary">

      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-12" style="border: 1px solid;">

        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active"><a href="#projectInfo" role="tab" data-toggle="tab">Project Info</a></li>
          <li role="presentation"><a href="#hardware" role="tab" data-toggle="tab">Hardware</a></li>
          <li role="presentation"><a href="#software" role="tab" data-toggle="tab">Software</a></li>
          <li role="presentation"><a href="#faq" role="tab" data-toggle="tab">FAQ</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane fade active" id="projectInfo">
            
          </div>
          <div role="tabpanel" class="tab-pane fade" id="hardware">
            
          </div>
          <div role="tabpanel" class="tab-pane fade" id="software">
            
          </div>
          <div role="tabpanel" class="tab-pane fade" id="faq">
            
          </div>
        </div>

      </div>
    </div>
    
    <div class="row">
      <div class="col-md-12 text-center">
        <h2><a href="/projectapplication">Create Your Own Project</a></h2>
      </div>
    </div>
  </div>
  
  <script type="text/javascript">
    $(document).ready(function() {
      
      $.get('/api/projectinfo/list', '', function(data) {
        //debugger;
        
        var projectInfo = data.projectinfo;
        
        $('.projSummary').append(projectInfo[0].basicInfo);
        $('#projectInfo').append(projectInfo[0].summary);
        $('#hardware').append(projectInfo[0].hardware);
        $('#software').append(projectInfo[0].software);
        
        //Activate the tabs to get content to show
        $('.nav-tabs').find('a').last().tab('show');
        $('.nav-tabs').find('a').first().tab('show')
      });
      
    });
  </script>
</section>